<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.vanyadubik.capcalculator.activity.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/animal_detail_card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/living_min"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_standart_big"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/living_min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/living_min_short"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/animal_detail_card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/salary_short"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_standart_big"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/salary"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/costs_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/animal_detail_card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/single_tax_rate"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_standart_big"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/first_group_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/first_group_percent"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/second_group_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/second_group_percent"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/third_group_percent_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/third_group_percent_tax"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/third_group_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/third_group_percent"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/animal_detail_card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/single_social_contribution"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_standart_big"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/single_soc_contr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/single_soc_contr_percent"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/animal_detail_card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/military_percent_short"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_standart_big"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/military_percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/military_percent"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/animal_detail_card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite"
                        android:layout_marginBottom="@dimen/margin_ctext_layout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/income_tax"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_size_standart_big"/>

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorWhite">

                        <com.gmail.vanyadubik.capcalculator.ui.widget.DrawableEditText
                            android:id="@+id/income_tax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/income_tax"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_standart"
                            android:textColor ="@color/colorAccent"
                            android:inputType="numberDecimal"
                            app:drawableRightCompat="@drawable/ic_keyboard"/>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/animal_detail_card_margin"
                android:layout_marginBottom="@dimen/animal_detail_card_margin"
                android:text="@string/action_default"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_standart"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
